include components/toggle/toggle
include components/card/card

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Pricing Component with Toggle
  body
    .component
      header.component__header
        .header
          h1.header__title Our Pricing
          .header__toggle 
            +toggle 
      main.component__card
        +card([
          {"title": "Basic", "price": "199.99", "cardColor": "white", "options": ["500 GB Storage", "2 Users Allowed", "Send up to 3 GB"]},
          {"title": "Professional", "price": "249.99", "cardColor": "violet", "options": ["1 TB Storage", "5 Users Allowed", "Send up to 10 GB"]},
          {"title": "Master", "price": "399.99", "cardColor": "white", "options": ["2 TB Storage", "10 Users Allowed", "Send up to 20 GB"]}
        ])
